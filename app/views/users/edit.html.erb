  <head>
    <link href="../stylesheets/signup.css" rel="stylesheet">
  </head>
<body class="text-center">
  <main class="form-signin">
    <h2>ユーザー情報編集</h2>
    <div class="form-signin">
      <%= form_with model: current_user, local: true do |f| %>
        <div class="form-floating">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email" %>
        </div>

        <div class="form-floating">
          <%= f.label :employee_number %><br />
          <%= f.text_field :employee_number, class: "form-control", placeholder: "社員番号"%>
        </div>

        <div class="form-floating">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-floating">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="w-100 btn btn-lg btn-primary">
          <%= f.submit "更新" %>
        </div>
      <% end %>
    </div>
  </main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>