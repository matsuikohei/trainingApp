<div class="container-fluid">
  <div class="row">
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="table-responsive user-info">
        <div class="training-contents">
          <h2 class="training-contents-header">研修内容情報</h2>
          <div class="training-content"><%= "実施日：#{@training.training_date}" %></div>
          <div class="training-content"><%= "研修生氏名：#{@trainee.last_name}#{@trainee.first_name}" %></div>
          <div class="training-content"><%= "カテゴリー：#{@training.training_category.name}" %></div>
          <div class="training-content"><%= "詳細：#{@training.content}" %></div>
          <div class="training-content"><%= "担当者：#{@trainer.last_name}#{@trainer.first_name}" %></div>
        </div>
        <% if current_user.id == @trainer.id %>
          <div class="">
            <div class="training-edit-btn">
              <%= link_to "編集", edit_training_path(@training), class:"training-btn" %>
            </div>
            <div class="training-delete-btn">
              <%= link_to "削除", training_path(@training),method: :delete, data: { confirm: '削除しますか'}, class:"training-btn" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="training-comments">
          <%= render partial: "shared/form", locals: {type: @training, comment: @training_comment} %>
      </div>
      <div class="comments" id="comment" >
        <% if @training_comments.length != 0 %>
          ＜コメント一覧＞
          <%= render partial: "comment", collection: @training_comments %>
        <% end %>
      </div>
      <div class="training-return-btn">
        <%= link_to "戻る", trainings_path, class:"training-btn" %>
      </div>
    </main>
  </div>
</div>