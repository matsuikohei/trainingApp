  <head>
    <link href="../stylesheets/signup.css" rel="stylesheet">
    <link href="../stylesheets/shared/error_messages.css" rel="stylesheet">
  </head>
<body class="text-center">
  <main class="form-signin">
    <h2>Sign up</h2>
    <div class="form-signin">
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-floating">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email" %>
        </div>

        <div class="form-floating">
          <%= f.label :employee_number %><br />
          <%= f.text_field :employee_number, class: "form-control", placeholder: "社員番号"%>
        </div>

        <div class="form-floating">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: "form-control", placeholder: "苗字" %>
        </div>

        <div class="form-floating">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, class: "form-control", placeholder: "名前" %>
        </div>

        <div class="form-floating">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password",placeholder: "パスワード" %>
        </div>

        <div class="form-floating">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "パスワード(確認)" %>
        </div>

        <div>
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </main>

</body>